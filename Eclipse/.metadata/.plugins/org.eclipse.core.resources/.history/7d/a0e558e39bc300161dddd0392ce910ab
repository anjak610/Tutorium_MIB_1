package Aufgabe14_5;

public class Quadrat {
	
	public static int k = 6;
	public static char star = '*';
	public static char fill = '-';
	
	public static char[] quad = new char[k];

	public static void main(String[] args) {
	
		int k = 6;
		quadrate(k);

	}

	private static void quadrate(int k) {


		if (k > 0 ) {			
			System.out.print("*");
			quadrate(k - 1);	
		}

		if (k > 1) {
			System.out.print("\n"+"*" + "-");		
			//quadrate(k - 1);
		}
		
		if(k==k)
		{
			System.out.print("*");
			//quadrate(k - 1);	
		}
	
		
	}
}
