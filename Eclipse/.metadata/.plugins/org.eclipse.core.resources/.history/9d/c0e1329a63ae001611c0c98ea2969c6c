
public class MinMaxDrei {

	
	public static void main(int[] args)
	{
		 int x = 0;
		 int y = 3;
		 int z = 7;
		 
		System.out.println("x:"+ x +"\n"+ "y:"+y +"\n"+"z:"+z);
		
		// Get Min
		if(x < y && x< z)
		{
			System.out.printf("x is Min: %s",x +"\n");
		}
		else if (y< x && y< z)
		{
			System.out.printf("y is Min: %s",y +"\n");
		}
		else if (z<y && z < x)
		{
			System.out.printf("z is Min: %s",z +"\n");
		}
		
		//Get Max
		
		if(x > y && x> z)
		{
			System.out.printf("x is Max: %s",x +"\n");
		}
		else if (y> x && y> z)
		{
			System.out.printf("y is Max: %s",y +"\n");
		}
		else if (z>y && z > x)
		{
			System.out.printf("z is Max: %s",z +"\n");
		}
		
		//Wt
	}		

}
