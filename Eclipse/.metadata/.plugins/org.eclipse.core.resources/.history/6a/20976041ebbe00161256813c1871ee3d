package Aufgabe_8;

public class Liste {

	public int element;
	public Liste nachfolger;
	public int laenge = 0;
	
	public Liste(int w)
	{
		element = w;
		nachfolger = null;
	}
	
	public void hinzufügen (int w)
	{
		//int laenge = 1;	
		if(nachfolger == null)
		{
			nachfolger = new Liste(w);
		}
		else
		{
			nachfolger.hinzufügen(w);
			//laenge++;
		}
	}
	
	public int laenge()
	{		
		
		if(nachfolger == null)
		{
			laenge++;
		}
		else
		{
			nachfolger.laenge();
			laenge++;
		}
		
		return laenge;
	}
	
	public void entfernen()
	{	
		if(nachfolger.nachfolger == null)
		{
			nachfolger = null;
		}
		else
		{
			nachfolger.entfernen();
		}		
	}
	
	public String toString()
	{	
		String str = "";
		str = str + element;
	    
		while (nachfolger != null)
		{	
			str = 	str + "," +nachfolger.element;	
			nachfolger = nachfolger.nachfolger; 
		}	
		return str;	
	}	

}
