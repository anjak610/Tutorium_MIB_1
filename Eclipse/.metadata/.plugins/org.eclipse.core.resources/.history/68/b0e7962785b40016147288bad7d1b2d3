package Examples;

public class ParametersToMethods {
	
	public static void main(String [] args)
	{
		int x = 3; // Deklarieren einer Variablen
		//WriteX(x); //Übergeben des Wertes x an die Methode 
		System.out.println("x der main Methode"+ WriteX(x));
	}
	
	private static void WriteX(int y) // Die Methode speichert den Wert dann für sich in einen eigenen int mit namen y, kann auch x genannt werden. WICHTIG! Heißen gleich sind aber unterschiedliche Variablen
	{
		System.out.println(y);
		y++; // wird um eins erhöht
		System.out.println(y);
	}

}
