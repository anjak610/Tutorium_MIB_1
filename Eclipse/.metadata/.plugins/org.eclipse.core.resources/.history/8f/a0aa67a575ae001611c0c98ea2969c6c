
public class Palindrome {
	
	public static void main (String[] args)
	{
		
		istPalindrom(args);		
		System.out.println("Palindrome is" + isPalindrome(args)); 
		
	}
	
	
	 public static boolean istPalindrom(String[] word){
		 
		  word[0] = "ANNA";
		  char[] letters = word[0].toCharArray();	
		
	        if(letters.length%2 == 0){
	            for(int i = 0; i < letters.length/2-1; i++){
	                if(letters[i] != letters[letters.length-i-1]){
	                    return false;
	                }
	            }
	        }else{
	            for(int i = 0; i < (letters.length-1)/2-1; i++){
	                if(letters[i] != letters[letters.length-i-1]){
	                    return false;
	                }
	            }
	        }
	        return true;
	    }
	}


