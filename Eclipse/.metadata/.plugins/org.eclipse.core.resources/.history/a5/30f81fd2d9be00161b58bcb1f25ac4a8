package Aufgabe_8;

public class Liste {

	public int element;
	public Liste nachfolger;
	public int laenge;
	
	public Liste(int w)
	{
		element = w;
		nachfolger = null;
	}
	
	public void hinzufügen (int w)
	{
		if(nachfolger == null)
		{
			nachfolger = new Liste(w);
		}
		else
		{
			nachfolger.hinzufügen(w);			
		}
	}
	
	public int laenge()
	{			
		laenge = 1;
		
		while (nachfolger != null)
		{				
			nachfolger = nachfolger.nachfolger;
			laenge++;	
		
		}		
		return laenge;
	}
	
	public void entfernen()
	{	
		while (nachfolger.nachfolger != null)
		{
			nachfolger = nachfolger.nachfolger;		
		}
		if(nachfolger.nachfolger == null)
		{
			nachfolger = null;	
		}
		
	}
	
	/*public String toString()
	{	
		String s =  ",";		
		return s;
	}*/
	
	public int summe()
	{
		int sum = 0;
		return sum;
	}
}
