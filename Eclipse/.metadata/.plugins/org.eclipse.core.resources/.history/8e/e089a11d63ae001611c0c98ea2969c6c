
public class MinMaxDrei {

	
	public static void main(int[] args)
	{
		 args[0] = 0;
		 args[1] = 3;
		 args[2] = 7;
		 
		System.out.println("args[0]:"+ args[0] +"\n"+ "args[1]:"+args[1] +"\n"+"args[2]:"+args[2]);
		
		// Get Min
		if(args[0] < args[1] &&args[0]< args[2])
		{
			System.out.printf("x is Min: %s",args[1] +"\n");
		}
		else if (args[1]< args[0] && args[1]< args[2])
		{
			System.out.printf("y is Min: %s",args[1] +"\n");
		}
		else if (args[2]<args[1] && args[2] < args[0])
		{
			System.out.printf("z is Min: %s",args[1] +"\n");
		}
		
		//Get Max
		
		if(x > y && x> z)
		{
			System.out.printf("x is Max: %s",x +"\n");
		}
		else if (y> x && y> z)
		{
			System.out.printf("y is Max: %s",y +"\n");
		}
		else if (z>y && z > x)
		{
			System.out.printf("z is Max: %s",z +"\n");
		}
		
		//With variable args[].length 
		
		//For
	}		

}
