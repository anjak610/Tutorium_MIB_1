
public class Palindrome {
	
	public static void main (String[] args)
	{
		palindrome(String[] palindrome);
	}
	
	public static void palindrome (String[] palindrome)
	{
		String word = "ANNA";
		char[] letters = word.toCharArray();		
		System.out.println(istPalindrom(letters)); 
	}
	
	 public static boolean istPalindrom(char[] letters){
	        if(letters.length%2 == 0){
	            for(int i = 0; i < letters.length/2-1; i++){
	                if(letters[i] != letters[letters.length-i-1]){
	                    return false;
	                }
	            }
	        }else{
	            for(int i = 0; i < (letters.length-1)/2-1; i++){
	                if(letters[i] != letters[letters.length-i-1]){
	                    return false;
	                }
	            }
	        }
	        return true;
	    }
	}


